    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800;900&display=swap');
        body { font-family: 'Inter', sans-serif; background-color: #f8fafc; }
        .radar-transition { transition: all 1.5s ease-in-out; }
        /* Animaciones suaves para GitHub Pages */
        .fade-in { animation: fadeIn 0.5s ease-out; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, Fragment } = React;

        // Componente de Iconos SVG
        const Icon = ({ name, size = 20, className = "" }) => {
            const icons = {
                globe: <path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zm0 18a8 8 0 1 1 8-8 8 8 0 0 1-8 8zM12 4a8 8 0 0 1 0 16 8 8 0 0 1 0-16z"/>,
                layers: <path d="m12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.27a1 1 0 0 0 0 1.83l8.57 4.09a2 2 0 0 0 1.66 0l8.57-4.09a1 1 0 0 0 0-1.83zM2 12l10 4.76L22 12M2 16l10 4.76L22 16"/>,
                glass: <path d="M7 2v10a5 5 0 0 0 10 0V2h-2v10a3 3 0 0 1-6 0V2H7zm5 15v5m-3 0h6"/>,
                palette: (
                    <Fragment>
                        <circle cx="13.5" cy="6.5" r=".5"/>
                        <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.9 0 1.6-.5 2-1.2.4.7 1.1 1.2 2 1.2a3 3 0 0 0 3-3c0-1.5-1.3-2.7-2.8-2.8.3-.5.5-1.1.5-1.7a6 6 0 0 0-6-6h-1"/>
                    </Fragment>
                ),
                mouse: <path d="m15 2-3.5 7h7L15 2zM8 8l1.5 3L8 14H5l-1.5-3L5 8h3zM19 15c0 3.3-2.7 6-6 6s-6-2.7-6-6 2.7-6 6-6 6 2.7 6 6z"/>,
                share: <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8m-4-6-4-4-4 4m4-4v13"/>,
                zap: <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/>,
                target: (
                    <Fragment>
                        <circle cx="12" cy="12" r="10"/>
                        <circle cx="12" cy="12" r="6"/>
                        <circle cx="12" cy="12" r="2"/>
                    </Fragment>
                ),
                activity: <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>,
                home: <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            };
            return (
                <svg width={size} height={size} viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className={className}>
                    {icons[name] || <circle cx="12" cy="12" r="10"/>}
                </svg>
            );
        };

        const App = () => {
            const [activeTab, setActiveTab] = useState('dashboard');
            const [activeBrand, setActiveBrand] = useState('moet');
            const [activeMarketBrand, setActiveMarketBrand] = useState('moet');

            // Datasets (Basados en el brief Moët 2026)
            const regionalIntel = [
                { city: "CDMX", intent: "Validación Cultural y Estatus", driver: "Prestigio & Networking VIP", share: 52, color: "#9333ea", searches: "Mesa VIP Zona Maco, Dom Pérignon P2" },
                { city: "Monterrey", intent: "Logro y Legado Familiar", driver: "Éxito & Gifting Premium", share: 18, color: "#d97706", searches: "Moët personalizado, San Pedro Luxury" },
                { city: "Guadalajara", intent: "Exploración de Tendencias", driver: "Innovación & Mixología", share: 12, color: "#2563eb", searches: "Terrazas Spritz, Chandon Garden" },
                { city: "Tulum", intent: "Hedonismo Solaire", driver: "Estética & Libertad", share: 12, color: "#FFB400", searches: "Beach Clubs, Rich on Ice" }
            ];

            const luxuryPsychography = {
                moet: { name: "Moët & Chandon", persona: "The Success Validator", psych: "El lujo como trofeo de éxito y pertenencia.", luxuryDimensions: { status: 90, heritage: 70, innovation: 40 }, digital: "Instagram, LinkedIn.", behavior: "Ritual del descorche.", intentTrend: [40, 35, 30, 50, 65, 55, 60, 45, 40, 50, 85, 100] },
                veuve: { name: "Veuve Clicquot", persona: "The Creative Aesthetic", psych: "Busca una 'Dolce Vita' creativa. Valora el diseño.", luxuryDimensions: { status: 60, heritage: 55, innovation: 85 }, digital: "Pinterest, TikTok.", behavior: "Contenido cromático.", intentTrend: [30, 85, 60, 45, 70, 95, 100, 90, 65, 55, 45, 50] },
                dom: { name: "Dom Pérignon", persona: "The Intellectual Collector", psych: "El lujo es conocimiento y misterio.", luxuryDimensions: { status: 95, heritage: 90, innovation: 75 }, digital: "Newsletters de inversión.", behavior: "Consumo ritualizado.", intentTrend: [20, 100, 50, 35, 40, 45, 40, 35, 50, 65, 75, 90] },
                chandon: { name: "Chandon", persona: "The Inclusivity Explorer", psych: "Rechaza el lujo rígido. Valora la frescura.", luxuryDimensions: { status: 40, heritage: 30, innovation: 95 }, digital: "TikTok, Spotify.", behavior: "Mixología casual.", intentTrend: [55, 50, 60, 70, 85, 90, 95, 85, 75, 65, 70, 80] }
            };

            const brandMarketAnalytic = {
                moet: { radar: [90, 60, 85, 75, 60], insight: "Dominancia absoluta en 'Status'.", color: "#C5B358" },
                veuve: { radar: [60, 85, 70, 65, 95], insight: "Liderazgo en 'Design' y Estilo.", color: "#FFB400" },
                dom: { radar: [100, 20, 95, 100, 80], insight: "Máxima 'Exclusividad' Intelectual.", color: "#1A1A1A" },
                chandon: { radar: [30, 100, 45, 35, 90], insight: "Innovación y Consumo Casual.", color: "#E30613" }
            };

            const getRadarPoints = (values) => {
                const radius = 100;
                const center = 150;
                return values.map((v, i) => {
                    const angle = (i * 72 - 90) * Math.PI / 180;
                    const r = (v / 100) * radius;
                    return `${center + r * Math.cos(angle)},${center + r * Math.sin(angle)}`;
                }).join(' ');
            };

            return (
                <div className="min-h-screen bg-[#F4F7F9] text-slate-900 flex">
                    {/* SIDEBAR */}
                    <div className="w-24 md:w-80 bg-[#0F172A] text-white flex flex-col h-screen sticky top-0 border-r border-slate-800">
                        <div className="p-8 border-b border-slate-800">
                            <h1 className="text-xl font-black tracking-tighter italic uppercase text-[#C5B358]">MH PR INTEL</h1>
                        </div>
                        <nav className="flex-1 pt-8 space-y-2 px-4">
                            {[
                                { id: 'dashboard', label: 'Intelligence', icon: 'globe' },
                                { id: 'profiles', label: 'Psychography', icon: 'layers' },
                                { id: 'share', label: 'Market 360', icon: 'share' },
                            ].map((tab) => (
                                <button key={tab.id} onClick={() => setActiveTab(tab.id)} className={`w-full flex items-center p-4 rounded-xl transition-all ${activeTab === tab.id ? 'bg-white text-slate-900 shadow-xl' : 'text-slate-500 hover:bg-slate-800'}`}>
                                    <Icon name={tab.icon} className="mr-0 md:mr-4" />
                                    <span className="hidden md:inline text-[10px] uppercase font-black tracking-widest">{tab.label}</span>
                                </button>
                            ))}
                        </nav>
                    </div>

                    {/* MAIN CONTENT */}
                    <div className="flex-1 p-8 md:p-12 overflow-y-auto">
                        {activeTab === 'dashboard' && (
                            <div className="fade-in space-y-12">
                                <h2 className="text-5xl font-black uppercase tracking-tighter">Regional Hub 2026</h2>
                                <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                                    {regionalIntel.map((region, i) => (
                                        <div key={i} className="bg-white p-8 rounded-3xl shadow-lg border-l-8" style={{borderLeftColor: region.color}}>
                                            <h4 className="text-2xl font-black uppercase mb-4">{region.city}</h4>
                                            <p className="text-sm font-bold text-slate-600 mb-2">Driver: {region.driver}</p>
                                            <p className="text-xs italic text-slate-400">"{region.searches}"</p>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}

                        {activeTab === 'profiles' && (
                            <div className="fade-in space-y-12">
                                <h2 className="text-5xl font-black uppercase tracking-tighter">Psychography</h2>
                                <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                                    {Object.entries(luxuryPsychography).map(([key, data]) => (
                                        <div key={key} className="bg-white p-10 rounded-[3rem] shadow-xl border border-slate-100">
                                            <h4 className="text-2xl font-black uppercase text-[#C5B358]">{data.name}</h4>
                                            <p className="text-xs font-bold uppercase tracking-widest mb-6">{data.persona}</p>
                                            <div className="bg-slate-50 p-6 rounded-2xl italic mb-6">"{data.psych}"</div>
                                            <div className="space-y-4">
                                                {Object.entries(data.luxuryDimensions).map(([dim, val]) => (
                                                    <div key={dim}>
                                                        <div className="flex justify-between text-[10px] font-black uppercase mb-1"><span>{dim}</span><span>{val}%</span></div>
                                                        <div className="h-2 bg-slate-100 rounded-full overflow-hidden">
                                                            <div className="h-full bg-slate-900" style={{width: `${val}%`}}></div>
                                                        </div>
                                                    </div>
                                                ))}
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}

                        {activeTab === 'share' && (
                            <div className="fade-in space-y-12 text-center">
                                <h2 className="text-5xl font-black uppercase tracking-tighter">Market Analysis</h2>
                                <div className="flex justify-center gap-4 mb-12">
                                    {['moet', 'veuve', 'dom', 'chandon'].map(key => (
                                        <button key={key} onClick={() => setActiveMarketBrand(key)} className={`px-6 py-2 rounded-full text-[10px] font-black uppercase border-2 transition-all ${activeMarketBrand === key ? 'bg-slate-900 text-white border-slate-900' : 'text-slate-400 border-slate-200'}`}>
                                            {key}
                                        </button>
                                    ))}
                                </div>
                                <div className="bg-white p-12 rounded-[4rem] shadow-2xl inline-block border-t-[16px]" style={{borderColor: brandMarketAnalytic[activeMarketBrand].color}}>
                                    <svg viewBox="0 0 300 300" className="w-64 h-64 md:w-96 md:h-96 mx-auto">
                                        {[100, 66, 33].map(r => <circle key={r} cx="150" cy="150" r={r} fill="none" stroke="#eee" strokeWidth="1" />)}
                                        <polygon points={getRadarPoints(brandMarketAnalytic[activeMarketBrand].radar)} fill={brandMarketAnalytic[activeMarketBrand].color} opacity="0.5" stroke={brandMarketAnalytic[activeMarketBrand].color} strokeWidth="3" className="radar-transition" />
                                    </svg>
                                    <p className="mt-8 text-xl font-black uppercase italic">"{brandMarketAnalytic[activeMarketBrand].insight}"</p>
                                </div>
                            </div>
                        )}
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
